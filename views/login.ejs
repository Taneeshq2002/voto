<%- include("partials/header"); -%>
<section class="login">
  <div class="container grid grid--2-col">
    <!-- Login Heading (text box) -->
    <div class="login-gradent-box">
      <div class="login-gradent--heading-box">
        <h1 class="login-gradent--heading">
          <!-- Online voting system for <span>Events.</span> -->
          &gt; Digital platform for college event <span> Voting.</span>
        </h1>
        <p class="login-gradent--text">
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Perferendis.
        </p>
      </div>
    </div>

    <div class="login-form-box">
      <!-- here we add Logo -->
      <img class="logo" src="css/logo.png" alt="logo" />
      <p class="login-form--main-text">Hey, hello ðŸ‘‹</p>
      <p class="login-form-text">
        Enter the information you entered while registering.
      </p>
      <form action="/login" method="post">
        <div class="form-flex-items">
          <label class="lable" for="Email">Voter ID</label>
          <input
            class="input"
            type="text"
            name="loginid"
            id=""
            placeholder="Voter id"
            required
          />
        </div>

        <div class="form-flex-items">
          <div class="password-lables">
            <label class="lable" for="password">Password</label>
            <label for=""
              ><a class="link forgot-password" href="#"
                >Forgot password?</a
              ></label
            >
          </div>
          <input
            class="input"
            type="password"
            name="loginpass"
            id=""
            placeholder="********"
            required
          />
        </div>
        <button class="btn btn--form">Login</button>
        <div class="forgot-password-box">
          <a class="link create-acc" href="/signup">Create account</a>
        </div>
      </form>
      <p
        style="
          font-weight: bolder;
          color: black;
          font-size: 2.5rem;
          margin-left: 6rem;
          margin-top: 3rem;
        "
      >
        <%= alert %>
      </p>
    </div>
  </div>
</section>

<%- include("partials/footer"); -%>
